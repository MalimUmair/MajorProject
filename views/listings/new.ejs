<% layout("/layouts/boilerplate.ejs") %>

<style>
    @media (max-width:412px){
        .mobile-fit{
            width: 100%;
            padding: 0 1rem;
            margin: 0;
        }
    }
</style>
<body>
    <div class="row mt-3">
    <div class="col-8 offset-2 mobile-fit">
    <h3>Create New Listing</h3>
    <Form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div>
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" type="text" class="form-control" placeholder="Enter Title" required>
            <div class="valid-feedback">Looks Goood</div>
        </div>
        <br> 
        <div>
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" cols="30" rows="3" class="form-control" required></textarea>
            <div class="invalid-feedback">Short Description is required</div>

        </div>
        <br> 
        <div>
            <label for="image" class="form-label">Upload file</label>
            <input name="listing[image]" type="file" class="form-control" >
        </div>
        <br>
        <div class="row">
            <div class="col-md-4">
                <label for="price" class="form-label">Price</label>
                <input type="number" name="listing[price]" class="form-control" required placeholder="Enter price">
            <div class="invalid-feedback">Price should be Valid</div>
            </div>
            <br> 
            <div class="col-md-8">
                <label for="country" class="form-label">Country</label>
                <input name="listing[country]" type="text" class="form-control" required placeholder="India">
                <div class="invalid-feedback">Country name should be Valid</div>
            </div>
        </div> 
        <br>
        <div>
                <label for="location" class="form-label">Location</label>
                <input name="listing[location]" type="text" class="form-control" placeholder="E.g. Mathura,Uttar Pradesh 281001" required>
                <div class="invalid-feedback">Location should be Valid</div>
        </div> 
        <br> 
        <button class="btn btn-primary add-btn mb-3">Create</button>
    </form>
</div>
</div>
</body>
